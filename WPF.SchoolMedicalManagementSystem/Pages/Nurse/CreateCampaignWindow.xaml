<Window x:Class="WPF.SchoolMedicalManagementSystem.Pages.Nurse.CreateCampaignWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tạo chiến dịch mới" Height="300" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Tên chiến dịch:" Grid.Row="0" VerticalAlignment="Center"/>
        <TextBox x:Name="txtName" Grid.Row="0" Margin="120,0,0,0" Width="220" Text="{Binding CheckupName, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Text="Ngày khám:" Grid.Row="1" VerticalAlignment="Center" Margin="0,10,0,0"/>
        <DatePicker x:Name="dpDate" Grid.Row="1" Margin="120,10,0,0" Width="220" SelectedDate="{Binding CheckupDate}"/>

        <TextBlock Text="Mô tả:" Grid.Row="2" VerticalAlignment="Center" Margin="0,10,0,0"/>
        <TextBox x:Name="txtDescription" Grid.Row="2" Margin="120,10,0,0" Width="220" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"/>

        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,20,0,0" HorizontalAlignment="Right">
            <Button Content="Lưu" Width="80" Margin="0,0,10,0" Command="{Binding SaveCommand}"/>
            <Button Content="Hủy" Width="80" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>