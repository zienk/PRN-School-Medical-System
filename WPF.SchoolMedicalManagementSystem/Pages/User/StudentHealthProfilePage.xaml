<Page x:Class="WPF.SchoolMedicalManagementSystem.Pages.User.StudentHealthProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Hồ sơ Sức khỏe Học sinh">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Hồ sơ Sức khỏe Học sinh" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <TextBlock Text="Thông tin Học sinh" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Họ và Tên:" Grid.Row="0" Grid.Column="0" Margin="5"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Margin="5" Padding="3"/>

                    <TextBlock Text="Ngày sinh:" Grid.Row="1" Grid.Column="0" Margin="5"/>
                    <DatePicker Grid.Row="1" Grid.Column="1" Margin="5" Padding="3"/>

                    <TextBlock Text="Giới tính:" Grid.Row="2" Grid.Column="0" Margin="5"/>
                    <ComboBox Grid.Row="2" Grid.Column="1" Margin="5" Padding="3">
                        <ComboBoxItem Content="Nam"/>
                        <ComboBoxItem Content="Nữ"/>
                        <ComboBoxItem Content="Khác"/>
                    </ComboBox>

                    <TextBlock Text="Lớp:" Grid.Row="3" Grid.Column="0" Margin="5"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Margin="5" Padding="3"/>

                    <TextBlock Text="Mã học sinh:" Grid.Row="4" Grid.Column="0" Margin="5"/>
                    <TextBox Grid.Row="4" Grid.Column="1" Margin="5" Padding="3" IsReadOnly="True" Background="#F0F0F0"/>
                </Grid>

                <TextBlock Text="Thông tin Sức khỏe" FontWeight="SemiBold" Margin="0,20,0,5"/>
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Chiều cao (cm):" Grid.Row="0" Grid.Column="0" Margin="5"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Margin="5" Padding="3"/>

                    <TextBlock Text="Cân nặng (kg):" Grid.Row="1" Grid.Column="0" Margin="5"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Margin="5" Padding="3"/>

                    <TextBlock Text="Bệnh mãn tính (nếu có):" Grid.Row="2" Grid.Column="0" Margin="5"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Margin="5" Padding="3" AcceptsReturn="True" TextWrapping="Wrap" Height="60"/>

                    <TextBlock Text="Dị ứng (nếu có):" Grid.Row="3" Grid.Column="0" Margin="5"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Margin="5" Padding="3" AcceptsReturn="True" TextWrapping="Wrap" Height="60"/>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Lưu Hồ sơ" Padding="10,5" Margin="5,0"/>
                    <Button Content="Hủy" Padding="10,5" Margin="5,0"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>