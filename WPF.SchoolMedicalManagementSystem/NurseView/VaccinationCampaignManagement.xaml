<Window x:Class="WPF.SchoolMedicalManagementSystem.NurseView.VaccinationCampaignManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản Lý Đợt Tiêm Chủng" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen" WindowState="Maximized">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}" Padding="12,8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Header Style -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#0078D4"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <!-- DataGrid Style -->
        <Style TargetType="DataGrid">
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#EEEEEE"/>
            <Setter Property="AlternatingRowBackground" Value="#F9F9F9"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="RowHeight" Value="48"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- DataGrid Header Style -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="Padding" Value="12,0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="QUẢN LÝ ĐỢT TIÊM CHỦNG" 
                   Style="{StaticResource HeaderStyle}"/>

        <!-- Toolbar -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Tìm kiếm:" 
                           FontSize="14" 
                           FontWeight="Medium" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"
                           Foreground="#333333"/>
                <TextBox x:Name="txtSearch" 
                         Width="250" 
                         Height="40"
                         Padding="10"
                         FontSize="14"
                         KeyUp="TxtSearch_KeyUp"/>
                <Button Content="Tìm" 
                        Background="#17A2B8" 
                        Style="{StaticResource ModernButton}"
                        Click="SearchButton_Click"
                        Width="60"/>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="Thêm đợt tiêm" 
                        Background="#28A745" 
                        Style="{StaticResource ModernButton}"
                        Click="AddCampaignButton_Click"/>
                <Button Content="Xem chi tiết" 
                        Background="#007BFF" 
                        Style="{StaticResource ModernButton}"
                        Click="ViewDetailButton_Click"/>
                <Button Content="Làm mới" 
                        Background="#17A2B8" 
                        Style="{StaticResource ModernButton}"
                        Click="RefreshButton_Click"/>
                <Button Content="Quay lại" 
                        Background="#6C757D" 
                        Style="{StaticResource ModernButton}"
                        Click="BackToDashboard_Click"/>
            </StackPanel>
        </Grid>

        <!-- DataGrid -->
        <Border Grid.Row="2" 
                Background="White"
                CornerRadius="8"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                Padding="8">
            <DataGrid x:Name="dgCampaigns" MouseDoubleClick="DgCampaigns_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding CampaignId}" Width="60"/>
                    <DataGridTextColumn Header="Tên vaccine" Binding="{Binding VaccineName}" Width="200"/>
                    <DataGridTextColumn Header="Ngày thực hiện" Binding="{Binding CampaignDate, StringFormat='{}{0:dd/MM/yyyy}'}" Width="120"/>
                    <DataGridTextColumn Header="Mô tả" Binding="{Binding Description}" Width="*"/>
                    <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status.StatusName}" Width="100"/>
                    <DataGridTextColumn Header="Người tạo" Binding="{Binding CreatedByNavigation.FullName}" Width="150"/>
                    <DataGridTemplateColumn Header="Thao tác" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Chi tiết" 
                                            Background="#007BFF" 
                                            Foreground="White"
                                            Padding="8,4" 
                                            Margin="2"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            Click="ViewCampaignDetailButton_Click"
                                            Tag="{Binding}"/>
                                    <Button Content="Danh sách HS" 
                                            Background="#28A745" 
                                            Foreground="White"
                                            Padding="8,4" 
                                            Margin="2"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            Click="ViewStudentListButton_Click"
                                            Tag="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3" 
                   Background="#F8F9FA" 
                   Height="32"
                   Padding="8,0">
            <StatusBarItem>
                <TextBlock x:Name="StatusLabel" 
                           Text="Sẵn sàng" 
                           FontSize="12"
                           Foreground="#333333"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="Mẹo: Double-click vào đợt tiêm để xem danh sách học sinh" 
                           FontSize="11" 
                           Foreground="#007BFF" 
                           FontStyle="Italic"
                           Margin="20,0,0,0"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock x:Name="RecordCountLabel" 
                           Text="Tổng: 0 đợt tiêm" 
                           FontSize="12"
                           Foreground="#333333"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>