<Window x:Class="WPF.SchoolMedicalManagementSystem.NurseView.VaccinationCampaignDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.SchoolMedicalManagementSystem.NurseView"
        mc:Ignorable="d"
        Title="Chiến dịch tiêm chủng" SizeToContent="Height" Width="600"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="White">
    <Window.Resources>
        <!-- Style cho Button -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}" Padding="12,8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style cho TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#222"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="4" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style cho Label -->
        <Style x:Key="ModernLabel" TargetType="Label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <!-- Style cho TextBlock (readonly info) -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#333333"/>
        </Style>
        
        <!-- Header Style -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#0078D4"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Tiêu đề -->
        <TextBlock Grid.Row="0" 
                   x:Name="txtHeader"
                   Text="THÊM CHIẾN DỊCH TIÊM CHỦNG MỚI" 
                   Style="{StaticResource HeaderStyle}"/>
        <!-- Thông báo hướng dẫn -->
        <TextBlock Grid.Row="0"
                   Margin="0,40,0,0"
                   Text="* Sau khi tạo chiến dịch, bạn sẽ lên danh sách học sinh và chỉ khi đó mới ghi nhận tiêm chủng."
                   Foreground="#D35400"
                   FontSize="14"
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap"/>
        
        <!-- Form nhập liệu -->
        <Border Grid.Row="1" 
                Background="White"
                CornerRadius="8"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                Padding="24">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Tên chiến dịch -->
                    <StackPanel>
                        <Label Content="Tên chiến dịch:" Style="{StaticResource ModernLabel}"/>
                        <TextBox x:Name="txtCampaignName" Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>
                    
                    <!-- Ngày -->
                    <StackPanel>
                        <Label Content="Ngày thực hiện:" Style="{StaticResource ModernLabel}"/>
                        <DatePicker x:Name="dpDate" Height="40" Padding="10"/>
                    </StackPanel>
                    
                    <!-- Trạng thái -->
                    <StackPanel>
                        <Label Content="Trạng thái:" Style="{StaticResource ModernLabel}"/>
                        <ComboBox x:Name="cmbStatus" Height="40" Padding="10"/>
                    </StackPanel>
                    
                    <!-- Mô tả -->
                    <StackPanel>
                        <Label Content="Mô tả:" Style="{StaticResource ModernLabel}"/>
                        <TextBox x:Name="txtDescription" 
                                 Style="{StaticResource ModernTextBox}" 
                                 Height="100" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True" 
                                 VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
        
        <!-- Nút thao tác -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <Button x:Name="btnSave"
                    Content="Lưu" 
                    Background="#28A745" 
                    Style="{StaticResource ModernButton}"
                    Click="BtnSave_Click"/>
            <Button x:Name="btnCancel" 
                    Content="Hủy" 
                    Background="#6C757D" 
                    Style="{StaticResource ModernButton}"
                    Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window> 