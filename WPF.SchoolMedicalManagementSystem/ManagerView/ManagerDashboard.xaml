<Window x:Class="WPF.SchoolMedicalManagementSystem.ManagerView.ManagerDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.SchoolMedicalManagementSystem.ManagerView"
        mc:Ignorable="d"
        Title="Manager Dashboard - School Medical System" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="White">
    <Window.Resources>
        <!-- Modern Card Style -->
        <Style x:Key="ModernCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="BorderBrush" Value="#E8F0FE" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Margin" Value="8" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="0" BlurRadius="20" Opacity="0.1" Color="#4285F4" />
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Gradient Card Style for Stats -->
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Padding" Value="25" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="15" Opacity="0.15" Color="#000000" />
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Sidebar Navigation Button Style -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="8,4" />
            <Setter Property="Padding" Value="20,15" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#5F6368" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                             VerticalAlignment="Center" 
                                             Margin="{TemplateBinding Padding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#F8F9FA" />
                                <Setter Property="Foreground" Value="#1A73E8" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#E8F0FE" />
                                <Setter Property="Foreground" Value="#1557B0" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stat Number Style -->
        <Style x:Key="StatNumberStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,0,0,5" />
        </Style>

        <!-- Stat Label Style -->
        <Style x:Key="StatLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Opacity" Value="0.9" />
        </Style>

        <!-- Header Style -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="36" />
            <Setter Property="FontWeight" Value="Light" />
            <Setter Property="Foreground" Value="#202124" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Margin" Value="0,20,0,10" />
        </Style>

        <!-- Welcome Text Style -->
        <Style x:Key="WelcomeStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="Foreground" Value="#5F6368" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Margin" Value="0,0,0,30" />
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Background Gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FAFBFC" Offset="0"/>
                <GradientStop Color="#F8F9FA" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="White" CornerRadius="0,20,20,0" 
                BorderBrush="#E8EAED" BorderThickness="0,0,1,0">
            <StackPanel Orientation="Vertical" Margin="20">
                <!-- Logo/Title Section -->
                <StackPanel Margin="0,20,0,40">
                    <TextBlock Text="🏫" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="School Management" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Foreground="#202124" 
                               HorizontalAlignment="Center" />
                    <TextBlock Text="Manager Portal" 
                               FontSize="14" 
                               Foreground="#5F6368" 
                               HorizontalAlignment="Center" />
                </StackPanel>

                <!-- Navigation Section -->
                <TextBlock Text="NAVIGATION" 
                           FontSize="12" 
                           FontWeight="SemiBold" 
                           Foreground="#9AA0A6" 
                           Margin="20,0,0,15" />

                <Button x:Name="btnManageUsers" 
                        Content="👥 Manage Users" 
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="btnManageUsers_Click" />

                <Button x:Name="btnManageStudents" 
                        Content="👨‍🎓 Manage Students" 
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="btnManageStudents_Click" />
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1" Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <StackPanel Grid.Row="0">
                <TextBlock Text="Dashboard" Style="{StaticResource HeaderStyle}" />
                <TextBlock Text="Welcome back! Here's an overview of your school management system." 
                           Style="{StaticResource WelcomeStyle}" />
            </StackPanel>

            <!-- Statistics Cards -->
            <Grid Grid.Row="1" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Total Users Card -->
                <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#4285F4" Offset="0"/>
                            <GradientStop Color="#1A73E8" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <StackPanel>
                        <TextBlock Text="👥" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock x:Name="txtTotalUsers" 
                                   Text="{Binding TotalUsers, FallbackValue=150}" 
                                   Style="{StaticResource StatNumberStyle}" />
                        <TextBlock Text="Total Users" Style="{StaticResource StatLabelStyle}" />
                    </StackPanel>
                </Border>

                <!-- Parent Users Card -->
                <Border Grid.Column="1" Style="{StaticResource StatCardStyle}">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#34A853" Offset="0"/>
                            <GradientStop Color="#137333" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <StackPanel>
                        <TextBlock Text="👨‍👩‍👧‍👦" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock x:Name="txtParentUsers" 
                                   Text="{Binding ParentUsers, FallbackValue=85}" 
                                   Style="{StaticResource StatNumberStyle}" />
                        <TextBlock Text="Parent Users" Style="{StaticResource StatLabelStyle}" />
                    </StackPanel>
                </Border>

                <!-- Nurse Users Card -->
                <Border Grid.Column="2" Style="{StaticResource StatCardStyle}">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#FF6D01" Offset="0"/>
                            <GradientStop Color="#E8710A" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <StackPanel>
                        <TextBlock Text="👩‍⚕️" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock x:Name="txtNurseUsers" 
                                   Text="{Binding NurseUsers, FallbackValue=12}" 
                                   Style="{StaticResource StatNumberStyle}" />
                        <TextBlock Text="Nurse Users" Style="{StaticResource StatLabelStyle}" />
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Recent Activity Section -->
            <Border Grid.Row="2" Style="{StaticResource ModernCardStyle}">
                <StackPanel>
                    <TextBlock Text="System Overview" 
                               FontSize="20" 
                               FontWeight="SemiBold" 
                               Foreground="#202124" 
                               Margin="0,0,0,20" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Management Actions -->
                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="Quick Actions" 
                                       FontSize="16" 
                                       FontWeight="Medium" 
                                       Foreground="#5F6368" 
                                       Margin="0,0,0,15" />

                            <Border Background="#F8F9FA" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                <TextBlock Text="👥 Add New User" 
                                           FontSize="14" 
                                           Foreground="#1A73E8" 
                                           Cursor="Hand" />
                            </Border>

                            <Border Background="#F8F9FA" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                <TextBlock Text="👨‍🎓 Enroll Student" 
                                           FontSize="14" 
                                           Foreground="#1A73E8" 
                                           Cursor="Hand" />
                            </Border>

                            <Border Background="#F8F9FA" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                <TextBlock Text="📊 Generate Report" 
                                           FontSize="14" 
                                           Foreground="#1A73E8" 
                                           Cursor="Hand" />
                            </Border>

                            <Border Background="#F8F9FA" CornerRadius="8" Padding="15">
                                <TextBlock Text="📋 View Health Records" 
                                           FontSize="14" 
                                           Foreground="#1A73E8" 
                                           Cursor="Hand" />
                            </Border>
                        </StackPanel>

                        <!-- System Status -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="System Status" 
                                       FontSize="16" 
                                       FontWeight="Medium" 
                                       Foreground="#5F6368" 
                                       Margin="0,0,0,15" />

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <Ellipse Width="8" Height="8" Fill="#34A853" Margin="0,0,10,0"/>
                                <TextBlock Text="User Management: Online" FontSize="14" Foreground="#202124"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <Ellipse Width="8" Height="8" Fill="#34A853" Margin="0,0,10,0"/>
                                <TextBlock Text="Student Records: Synced" FontSize="14" Foreground="#202124"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <Ellipse Width="8" Height="8" Fill="#34A853" Margin="0,0,10,0"/>
                                <TextBlock Text="Health System: Active" FontSize="14" Foreground="#202124"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Fill="#FBBC04" Margin="0,0,10,0"/>
                                <TextBlock Text="Backup: Scheduled" FontSize="14" Foreground="#202124"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>