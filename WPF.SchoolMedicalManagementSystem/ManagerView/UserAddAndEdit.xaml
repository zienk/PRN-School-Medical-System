<Window x:Class="WPF.SchoolMedicalManagementSystem.ManagerView.UserAddAndEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.SchoolMedicalManagementSystem"
        mc:Ignorable="d"
        Title="Thông Tin Người Dùng" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Style cho Button -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}" Padding="12,8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="4" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="5"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho PasswordBox -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border CornerRadius="4" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="5"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho ComboBox -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border CornerRadius="4" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter Grid.Column="0" 
                                                  Margin="10,0,0,0"
                                                  VerticalAlignment="Center"
                                                  Content="{TemplateBinding SelectionBoxItem}"/>
                                <ToggleButton Grid.Column="1" 
                                              Width="30" 
                                              Height="38"
                                              IsChecked="{Binding Path=IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                              Background="Transparent"
                                              BorderThickness="0">
                                    <Path Data="M 0 0 L 4 4 L 8 0 Z" 
                                          Fill="#666666" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                                </ToggleButton>
                                <Popup Grid.Column="0" 
                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                       Placement="Bottom"
                                       AllowsTransparency="True">
                                    <Border Background="White" 
                                            BorderBrush="#CCCCCC" 
                                            BorderThickness="1"
                                            CornerRadius="4">
                                        <ScrollViewer MaxHeight="200">
                                            <ItemsPresenter/>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho Label -->
        <Style x:Key="ModernLabel" TargetType="Label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Header Style -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#0078D4"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Grid.Row="0" 
                   x:Name="HeaderTitle"
                   Text="THÊM NGƯỜI DÙNG MỚI" 
                   Style="{StaticResource HeaderStyle}"/>

        <!-- Form nhập liệu -->
        <Border Grid.Row="1" 
                Background="White"
                CornerRadius="8"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                Padding="24">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- Tên đăng nhập (chỉ hiện khi thêm mới) -->
                    <StackPanel x:Name="UsernamePanel">
                        <Label Content="Tên đăng nhập:" Style="{StaticResource ModernLabel}"/>
                        <TextBox x:Name="txtUsername" 
                                 Style="{StaticResource ModernTextBox}"
                                 MaxLength="50"
                                 Padding="0"/>
                    </StackPanel>

                    <!-- Mật khẩu (chỉ hiện khi thêm mới) -->
                    <StackPanel x:Name="PasswordPanel">
                        <Label Content="Mật khẩu:" Style="{StaticResource ModernLabel}"/>
                        <PasswordBox x:Name="txtPassword" 
                                     Style="{StaticResource ModernPasswordBox}"
                                     MaxLength="255"
                                     Padding="0"/>
                    </StackPanel>

                    <!-- Xác nhận mật khẩu (chỉ hiện khi thêm mới) -->
                    <StackPanel x:Name="ConfirmPasswordPanel">
                        <Label Content="Xác nhận mật khẩu:" Style="{StaticResource ModernLabel}"/>
                        <PasswordBox x:Name="txtConfirmPassword" 
                                     Style="{StaticResource ModernPasswordBox}"
                                     MaxLength="255"
                                     Padding="0"/>
                    </StackPanel>

                    <!-- Họ và tên -->
                    <StackPanel>
                        <Label Content="Họ và tên:" Style="{StaticResource ModernLabel}"/>
                        <TextBox x:Name="txtFullName" 
                                 Style="{StaticResource ModernTextBox}"
                                 MaxLength="100"
                                 Padding="0"/>
                    </StackPanel>

                    <!-- Vai trò -->
                    <StackPanel>
                        <Label Content="Vai trò:" Style="{StaticResource ModernLabel}"/>
                        <ComboBox x:Name="cmbRole"
                                      Height="40"
                                      FontSize="14"
                                      BorderThickness="0"
                                      VerticalContentAlignment="Center"
                                      Padding="0" BorderBrush="#FFF7F7F7"/>
                    </StackPanel>

                    <!-- Email -->
                    <StackPanel>
                        <Label Content="Email:" Style="{StaticResource ModernLabel}"/>
                        <TextBox x:Name="txtEmail" 
                                 Style="{StaticResource ModernTextBox}"
                                 MaxLength="100"
                                 Padding="0"/>
                    </StackPanel>

                    <!-- Số điện thoại -->
                    <StackPanel>
                        <Label Content="Số điện thoại:" Style="{StaticResource ModernLabel}"/>
                        <TextBox x:Name="txtPhone" 
                                 Style="{StaticResource ModernTextBox}"
                                 MaxLength="15"
                                 Padding="0"/>
                    </StackPanel>

                    <!-- Địa chỉ -->
                    <StackPanel>
                        <Label Content="Địa chỉ:" Style="{StaticResource ModernLabel}"/>
                        <TextBox x:Name="txtAddress" 
                                 Style="{StaticResource ModernTextBox}"
                                 Height="80"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 MaxLength="255"
                                 Padding="0"/>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Nút thao tác -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <Button x:Name="btnSave"
                    Content="Lưu" 
                    Background="#28A745" 
                    Style="{StaticResource ModernButton}"
                    Click="SaveButton_Click"/>
            <Button Content="Hủy" 
                    Background="#6C757D" 
                    Style="{StaticResource ModernButton}"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>